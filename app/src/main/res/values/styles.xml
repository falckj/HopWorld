<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OnlyStatusBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomToTopAnimation">
        <item name="android:windowEnterAnimation">@animator/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_to_bottom</item>
    </style>

    <style name="CustomMaterialButtom" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
